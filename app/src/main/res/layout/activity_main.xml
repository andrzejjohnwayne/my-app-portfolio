<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:text="@string/hello_world"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="24sp"
        android:id="@+id/upperText" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SPOTIFY STREAMER"
        android:id="@+id/SPOTIFY_BUTTON"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/upperText"
        android:layout_centerHorizontal="true"
        android:width="200dp"
        android:height="50dp"
        android:background="#FF9100"
        android:onClick="spotifyStreamer"/>

    <Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="SCORES APP"
    android:id="@+id/SCORE_APP_BUTTON"
    android:layout_marginTop="100dp"
    android:layout_below="@+id/upperText"
    android:layout_centerHorizontal="true"
    android:width="200dp"
    android:height="50dp"
    android:background="#FF9100"
    android:onClick="scoreApp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LIBRARY APP"
        android:id="@+id/LIBRARY_APP_BUTTON"
        android:layout_marginTop="160dp"
        android:layout_below="@+id/upperText"
        android:layout_centerHorizontal="true"
        android:width="200dp"
        android:height="50dp"
        android:background="#FF9100"
        android:onClick="libraryApp"
       />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BUILD IT BIGGER"
        android:id="@+id/BUILD_BUTTON"
        android:layout_marginTop="220dp"
        android:layout_below="@+id/upperText"
        android:layout_centerHorizontal="true"
        android:width="200dp"
        android:height="50dp"
        android:background="#FF9100"
        android:onClick="buildItBigger"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="XYZ READER"
        android:id="@+id/XYZ_BUTTON"
        android:layout_marginTop="280dp"
        android:layout_below="@+id/upperText"
        android:layout_centerHorizontal="true"
        android:width="200dp"
        android:height="50dp"
        android:background="#FF9100"
        android:onClick="xyzReader"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CAPSTONE: MY OWN APP"
        android:id="@+id/CAPSTONE_BUTTON"
        android:layout_marginTop="340dp"
        android:layout_below="@+id/upperText"
        android:layout_centerHorizontal="true"
        android:width="200dp"
        android:height="50dp"
        android:background="#DD2C00"
        android:textColor="@android:color/white"
        android:onClick="capstone"/>

</RelativeLayout>
